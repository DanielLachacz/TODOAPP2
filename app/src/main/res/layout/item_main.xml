<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/name_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/date_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.02.2020"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_item_text_view"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/category_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zakupy"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/date_item_text_view"
        app:layout_constraintTop_toBottomOf="@+id/name_item_text_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />



</androidx.constraintlayout.widget.ConstraintLayout>